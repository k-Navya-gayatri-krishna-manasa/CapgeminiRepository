<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="transaction">
    <xs:complexType>
      <xs:sequence>
        <xs:element type="xs:short" name="retailStoreID"/>
        <xs:element name="transactionDetails" maxOccurs="unbounded" minOccurs="0">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="businessDayDate"/>
              <xs:element name="purchaseDetails">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="items" maxOccurs="unbounded" minOccurs="0">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element type="xs:short" name="itemId"/>
                          <xs:element type="xs:string" name="itemName"/>
                          <xs:element type="xs:float" name="amount"/>
                          <xs:element type="xs:byte" name="quantity"/>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element type="xs:float" name="totalAmount"/>
                  </xs:sequence>
                  <xs:attribute type="xs:short" name="OrderId" use="optional"/>
                </xs:complexType>
              </xs:element>
              <xs:element name="delivery">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element type="xs:string" name="deliveryStatus"/>
                  </xs:sequence>
                  <xs:attribute type="xs:string" name="deliveryValue" use="optional"/>
                </xs:complexType>
              </xs:element>
              <xs:element type="xs:string" name="paymentMode"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>